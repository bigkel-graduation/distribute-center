<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itchenyang.mapper.UserManageMapper">
    <select id="getUserList" resultType="com.itchenyang.entity.UserInformation">
        select id,username,phone,role_pid,role_cid,is_lock
        from t_user
        where is_delete = 0
        <if test="pid != 0">
            and role_pid = #{pid}
        </if>
        <if test="cid != 0">
            and role_cid &gt; 0
        </if>
        limit #{limit} offset #{offset}
    </select>
</mapper>